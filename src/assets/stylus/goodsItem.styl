.goodsItem
    figure
        width @width
        figcaption
            padding 0 15px
            background-color $color1
            font-size 14px
            color $color7
            width @width
            height 31px
            line-height @height
        section
            padding 0 15px
            width @width
            p
                $border(bottom)
                font-size 17px
                width @width
                height 55px
                line-height @height
                &:last-child
                    border 0
                span
                    display inline-block
                    width 26%
                    color $color7
                input
                    float right
                    background-color $white
                    appearance none
                    text-align right
                    font-size 17px
                    color $color3
                    border 0
                    width 70%
                    height 54px
                select
                    display inline-block
                    float right
                    appearance none
                    background none
                    text-align right
                    font-size 17px
                    color $color3
                    border 0
                    height 54px
                &.upload
                    height 86px
                    line-height 80px
                    .uploadRight
                        display inline-block
                        vertical-align bottom
                        float right
                        text-align right
                        font-size 0
                        position relative
                        span
                            display inline-block
                            vertical-align middle
                            text-align center
                            font-size 12px
                            color $color7
                            border 1px solid #CCCCCC
                            width 92px
                            height 65px
                            line-height @height
                            &.uploadBtn
                                position absolute
                                top 8px
                                right -5px
                            &.btn
                                position absolute
                                top 8px
                                right -5px
                                z-index 10
                                opacity 0
                        .img
                            position absolute
                            top 8px
                            right -5px
                            z-index 1
                            width 92px
                            height 65px
                            background-color #0575f2
            &.textArea
                p
                    margin 10px 0
                    height auto
                    line-height normal
                    position relative
                    textarea
                        padding 5px
                        border 0
                        font-size 14px
                        color $color3
                        width 100%
                        height 98px
                    span
                        display block
                        text-align right
                        font-size 12px
                        color $color3
                        width auto
            &.switch
                border-top 10px solid $color9
                p
                    .switchBtn
                        margin-top 15px
                        float right
                        display inline-block
                        border 1px solid #D1D1D1
                        width 55px
                        height 26px
                        line-height normal
                        border-radius (@height/2)
                        position relative
                        span
                            position absolute
                            top 3px
                            display inline-block
                            width 18px
                            height 18px
                            border-radius (@height/2)
                            transition right .5s
                            &.btn1
                                right 6px
                                background-color $color2
                                &.btn1Active
                                    right 31px
                            &.btn2
                                left 6px
                                background-color $color6
                                &.btn2Active
                                    left 31px
