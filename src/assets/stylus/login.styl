.inputValueBox
    margin-top 108px
    text-align center
    h3
        margin-bottom 8px
        font-size 20
        color #3C3C3C
    .inputText
        margin-top 17px
        font-size 12px
        color $color7
    .errorMsg
        font-size 10px
        color #F00
    .img
        img
            width 23px
            height 24px
            animation play 2s linear infinite
    .inputValue
        margin 0 auto
        padding 12px 0
        border-bottom 2px solid $color9
        width 255px
        input
            border 0
            outline none
            font-size 24px
            color $color7
            width 150px
            height 33px
            line-height 33px
            text-align center
            line-height 33px
        span
            float right
            margin-top 8px
            img
                width 14px
                height 14px
    .next
        margin-top 40px
        width 100%
        height 24px
        text-align center
        span
            font-size 17px
            color #FC9F13
    .loading
        margin 60px auto 0 auto
        background-color #667380
        border-radius 6px
        color $white
        font-size 14px
        width 95px
        height 40px
        line-height @height
        text-align center
        img
            margin-right 7px
            vertical-align middle
            width 23px
            heigjt 24px
            animation play 2s linear infinite
    @keyframes play{ // 旋转动画
        0% {
            transform rotate(0deg)
        }
        100% {
            transform rotate(360deg)
        }
    }
